<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/fondo"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/rvEncabezadoTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encabezado"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hace "
                        android:paddingEnd="5dp"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/rvFechaTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5d"
                        android:textSize="12sp"
                        android:paddingEnd="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="12sp"
                        android:paddingEnd="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prioridad"
                        android:textSize="12sp"
                        android:paddingEnd="2dp"
                        android:textColor="@color/azulInterfaz"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/rvPrioridadTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alta"
                        android:textSize="12sp"
                        android:paddingEnd="2dp"
                        android:textColor="@color/azulInterfaz"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/rvBotonDetallesTicket"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/fondo"
                android:drawableTint="@color/azulInterfaz"
                app:tint="@color/azulInterfaz"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_forward"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>