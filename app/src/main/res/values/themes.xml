<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RTCompanion" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulInterfaz</item>
        <item name="colorPrimaryVariant">@color/azulInterfaz</item>
        <item name="colorOnPrimary">@color/fondo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarillo</item>
        <item name="colorSecondaryVariant">@color/amarilloSecundario</item>
        <item name="colorOnSecondary">@color/fondo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azulInterfaz</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

    </style>

    <style name="Theme.Rooms.NoActionBar" parent="Theme.RTCompanion">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/azulInterfaz</item>
    </style>

    <style name="Theme.RTCompanion" parent="Base.Theme.RTCompanion" />
</resources>